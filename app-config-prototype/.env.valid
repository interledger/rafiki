# Valid configuration for demo
# All required fields are present with valid values

NODE_ENV=development
LOG_LEVEL=info
ADMIN_PORT=3001
ADMIN_API_SECRET=super-secret-key-12345

DATABASE_URL=postgresql://postgres:password@localhost:5432/rafiki
REDIS_URL=redis://127.0.0.1:6379

ENABLE_AUTO_PEERING=false
ENABLE_TELEMETRY=true

WEBHOOK_URL=https://example.com/webhooks
WEBHOOK_TIMEOUT=2000

# Optional field - card service integration
CARD_SERVICE_URL=https://cards.example.com/api

PRIVATE_KEY_FILE=/etc/rafiki/private-key.pem
SLIPPAGE=0.01
