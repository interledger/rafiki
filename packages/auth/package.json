    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "ajv": "^8.12.0",
    "axios": "^1.4.0",
    "@interledger/http-signature-utils": "1.0.3",
    "httpbis-digest-headers": "github:interledger/httpbis-digest-headers",
    "knex": "^2.5.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-session": "^6.4.0",
