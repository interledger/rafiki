{
  "name": "auth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "knex": "knex",
    "generate": "graphql-codegen --config codegen.yml",
    "build:deps": "pnpm --filter open-payments build && pnpm --filter token-introspection build",
    "build": "pnpm build:deps && pnpm clean && tsc --build tsconfig.json && pnpm copy-files",
    "clean": "rm -fr dist/",
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "prepack": "pnpm build",
    "copy-files": "cp src/graphql/schema.graphql dist/graphql/ && cp -r ./src/openapi ./dist/"
  },
  "dependencies": {
    "@adonisjs/fold": "^8.2.0",
    "@apollo/server": "^4.4.0",
    "@as-integrations/koa": "^0.3.0",
    "graphql": "^16.6.0",
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@graphql-tools/load": "^7.8.12",
    "@graphql-tools/schema": "^9.0.16",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "ajv": "^8.12.0",
    "axios": "^1.3.4",
    "http-signature-utils": "workspace:../http-signature-utils",
    "httpbis-digest-headers": "github:interledger/httpbis-digest-headers",
    "knex": "^2.4",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-session": "^6.4.0",
    "node-mocks-http": "^1.12.1",
    "objection": "^3.0.1",
    "objection-db-errors": "^1.1.2",
    "open-payments": "workspace:*",
    "openapi": "workspace:../openapi",
    "pg": "^8.9.0",
    "pino": "^8.11.0",
    "pino-pretty": "^9.3.0",
    "testcontainers": "^9.1.3",
    "token-introspection": "workspace:*",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@apollo/client": "^3.7.9",
    "@graphql-codegen/cli": "3.1.0",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typescript": "3.0.1",
    "@graphql-codegen/typescript-resolvers": "3.1.0",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.4.0",
    "@types/koa": "2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-session": "^5.10.6",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@types/uuid": "^9.0.0",
    "cross-fetch": "^3.1.4",
    "jest-openapi": "^0.14.2",
    "nock": "^13.3.0",
    "openapi-types": "^12.1.0",
    "typescript": "^4.9.5"
  }
}
