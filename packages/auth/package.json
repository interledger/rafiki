{
  "name": "auth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "knex": "knex",
    "generate": "graphql-codegen --config codegen.yml",
    "build:deps": "pnpm --filter token-introspection build",
    "build": "pnpm build:deps && pnpm clean && tsc --build tsconfig.json && pnpm copy-files",
    "clean": "rm -fr dist/",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --maxWorkers=50%",
    "test:cov": "pnpm test -- --coverage",
    "test:sincemain": "pnpm test -- --changedSince=main",
    "test:sincemain:cov": "pnpm test:sincemain --coverage",
    "prepack": "pnpm build",
    "postinstall": "pnpm copy-op-schemas",
    "copy-op-schemas": "cp ./node_modules/@interledger/open-payments/dist/openapi/specs/auth-server.yaml ./node_modules/@interledger/open-payments/dist/openapi/specs/schemas.yaml ./src/openapi/specs/",
    "copy-files": "cp src/graphql/schema.graphql dist/graphql/ && cp -r ./src/openapi ./dist/",
    "dev": "ts-node-dev --inspect=0.0.0.0:9229 --respawn --transpile-only src/index.ts"
  },
  "dependencies": {
    "@adonisjs/fold": "^8.2.0",
    "@apollo/server": "^4.11.2",
    "@as-integrations/koa": "^1.1.1",
    "@escape.tech/graphql-armor": "^2.4.0",
    "@graphql-tools/graphql-file-loader": "^8.0.12",
    "@graphql-tools/load": "^8.0.12",
    "@graphql-tools/schema": "^10.0.16",
    "@interledger/http-signature-utils": "2.0.2",
    "@interledger/open-payments": "6.13.2",
    "@interledger/openapi": "2.0.2",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.2",
    "ajv": "^8.12.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "graphql": "^16.8.1",
    "ioredis": "^5.3.2",
    "json-canonicalize": "^1.0.6",
    "knex": "^3.1.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-session": "^6.4.0",
    "objection": "^3.1.5",
    "objection-db-errors": "^1.1.2",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "token-introspection": "workspace:*",
    "ts-node-dev": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@apollo/client": "^3.11.8",
    "@faker-js/faker": "^8.4.1",
    "@graphql-codegen/cli": "5.0.4",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.3",
    "@graphql-codegen/typescript-resolvers": "4.4.2",
    "@types/koa": "2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-session": "^6.4.5",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/uuid": "^9.0.8",
    "cross-fetch": "^4.1.0",
    "jest-openapi": "^0.14.2",
    "nock": "14.0.0-beta.19",
    "node-mocks-http": "^1.16.2",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^11.0.0",
    "testcontainers": "^10.16.0"
  }
}
