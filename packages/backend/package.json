{
  "name": "backend",
  "scripts": {
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "test:ci": "jest --passWithNoTests --maxWorkers=2",
    "test:cov": "pnpm test -- --coverage",
    "test:sincemain": "pnpm test -- --changedSince=main",
    "test:sincemain:cov": "pnpm test:sincemain --coverage",
    "knex": "knex",
    "generate": "graphql-codegen --config codegen.yml",
    "build:deps": "pnpm --filter token-introspection build",
    "build": "pnpm build:deps && pnpm clean && tsc --build tsconfig.json && pnpm copy-files",
    "clean": "rm -fr dist/",
    "copy-files": "cp src/graphql/schema.graphql dist/graphql/ && cp -r ./src/openapi ./dist/",
    "prepack": "pnpm build"
  },
  "devDependencies": {
    "@apollo/client": "^3.8.7",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/koa": "2.13.12",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__router": "^12.0.4",
    "@types/lodash": "^4.14.202",
    "@types/luxon": "^3.3.3",
    "@types/rosie": "^0.0.45",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^9.0.7",
    "cross-fetch": "^4.0.0",
    "ilp-protocol-ildcp": "^2.2.3",
    "ilp-protocol-stream": "^2.7.1",
    "jest-openapi": "^0.14.2",
    "nock": "^13.3.8",
    "node-mocks-http": "^1.13.0",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^10.2.3",
    "react": "~18.2.0",
    "rosie": "^2.1.1",
    "testcontainers": "^10.2.2",
    "tmp": "^0.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@adonisjs/fold": "^8.2.0",
    "@apollo/server": "^4.9.2",
    "@as-integrations/koa": "^1.1.1",
    "@faker-js/faker": "^8.2.0",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@interledger/http-signature-utils": "2.0.0",
    "@interledger/open-payments": "6.0.0",
    "@interledger/openapi": "1.2.1",
    "@interledger/pay": "0.4.0-alpha.9",
    "@interledger/stream-receiver": "^0.3.3-alpha.3",
    "@koa/router": "^12.0.0",
    "ajv": "^8.12.0",
    "axios": "1.6.2",
    "base64url": "^3.0.1",
    "dotenv": "^16.3.1",
    "extensible-error": "^1.0.2",
    "graphql": "^16.8.1",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.22.4",
    "ilp-packet": "3.1.4-alpha.2",
    "ilp-protocol-ccp": "^1.2.3",
    "ilp-protocol-ildcp": "^2.2.3",
    "ioredis": "^5.3.2",
    "json-canonicalize": "^1.0.6",
