    "@koa/router": "^12.0.2",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.52.1",
    "@opentelemetry/instrumentation": "^0.52.1",
