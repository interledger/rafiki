{
  "name": "@interledger/rafiki",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": "https://github.com/interledger/rafiki",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint": "eslint --max-warnings=0 --fix .",
    "lint:check": "eslint --max-warnings=0 .",
    "lint:check:hook": "eslint --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:check:hook": "prettier --check",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "build": "tsc --build",
    "prepare": "husky install",
    "localenv": "docker compose -f ./infrastructure/local/docker-compose.yml -f ./infrastructure/local/peer-docker-compose.yml",
    "localenv:seed:auth": "pnpm -C ./packages/auth knex seed:run --env=development && pnpm -C ./packages/auth knex seed:run --env=peerdevelopment",
    "localenv:dbvolumes:remove": "docker volume rm local_database-data && docker volume rm local_tigerbeetle-data",
    "sanity": "pnpm -r build && pnpm -r test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/types": "^28.1.3",
    "@swc/core": "^1.2.241",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^8.0.0",
    "jest": "^28.1",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "dependenciesMeta": {
    "tigerbeetle-node": {
      "built": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none"
  }
}
